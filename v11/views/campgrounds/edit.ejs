<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= campground.name %></h1>
        <div style="width: 30%; margin: 25px auto;"> <!--Center the form and make it shorter-->
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">    <!--form-group class makes nice spacing between inputs and button-->
                    <input class="form-control" type="text" name="campground[name]" value = "<%= campground.name %>"></input>
                </div>  
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[image]" value = "<%= campground.image %>"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[description]" value = "<%= campground.description %>"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button> <!--btn-block takes all the space in the block-->
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>">Back to <%= campground.name %></a>
        </div>
        
    </div>
    
</div>
<% include ../partials/footer %>