<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a new Campground</h1>
        <div style="width: 30%; margin: 25px auto;"> <!--Center the form and make it shorter-->
            <form action="/campgrounds" method="POST">
                <div class="form-group">    <!--form-group class makes nice spacing between inputs and button-->
                    <input class="form-control" type="text" name="name" placeholder="Name"></input>
                </div>  
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Image url"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Description"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button> <!--btn-block takes all the space in the block-->
                </div>
            </form>
            <a href="/campgrounds">Back</a>
        </div>
        
    </div>
    
</div>
<% include ../partials/footer %>