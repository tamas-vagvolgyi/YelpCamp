<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add a new comment to <%= campground.name %></h1>
        <div style="width: 30%; margin: 25px auto;"> <!--Center the form and make it shorter-->
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">    <!--form-group class makes nice spacing between inputs and button-->
                    <input class="form-control" type="text" name="comment[text]" placeholder="Write your comment here"></input>
                </div>  
                <div class="form-group">    <!--form-group class makes nice spacing between inputs and button-->
                    <input class="form-control" type="text" name="comment[author]" placeholder="Author"></input>
                </div> 
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit Comment</button> <!--btn-block takes all the space in the block-->
                </div>
            </form>
            <a href="/campgrounds">Back</a>
        </div>
        
    </div>
    
</div>
<% include ../partials/footer %>